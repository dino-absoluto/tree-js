{
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "outDir": "./__tmp__/built/compiled",
    "declaration": true,
    "declarationDir": "./__tmp__/built/dts",
    "tsBuildInfoFile": "./__tmp__/built/cache/tsbuildinfo"
  },
  "include": [
    "./src/**/*.ts"
  ]
}
